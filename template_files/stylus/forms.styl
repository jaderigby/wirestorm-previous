forms()
  .form-segment
    margin: 15px 0
    .form-element
      margin: 0
  .form-element
    position: relative
    margin: 15px 0
  .form-element
    input[type="text"] + label
    input[type="email"] + label
    input[type="password"] + label
    textarea + label
      position: absolute
      top: 10px
      left: 10px
      color: #949494
      font-size: 0.85rem
      pointer-events: none
      transition: all 0.2s ease-out
  .form-element
    input[type="text"]:focus + label
    input[type="email"]:focus + label
    input[type="password"]:focus + label
    textarea:focus + label
      color: #525252
      transform: scale(0.85) translate(-15px, -29px)
    &.has-value
      input[type="text"] + label
      input[type="email"] + label
      input[type="password"] + label
      textarea + label
        color: #525252
        transform: scale(0.85) translate(-15px, -29px)
  .form-segment
    .form-element
      input[type="text"]
      input[type="email"]
      input[type="password"]
        transition: all 0.2s ease-out
  .form-element
    transition: all 0.2s ease-out
    &.has-value
      margin-top: 25px
    input[type="text"]
    input[type="email"]
    input[type="password"]
      transition: all 0.2s ease-out
  .form-segment
    .form-element
      input[type="text"]:focus + label
      input[type="email"]:focus + label
      input[type="password"]:focus + label
        transform: scale(0.85) translate(-18px, -29px)
      &.has-value
        margin-top: 12px
        input[type="text"] + label
        input[type="email"] + label
        input[type="password"] + label
          transform: scale(0.85) translate(-18px, -29px)
  input[type="text"]
  input[type="email"]
  input[type="password"]
    display: block
    padding: 4px 10px
    width: calc(100% - 22px)
    height: 25px
    font-size: 0.85rem
    color: #84f1ff
    line-height: 1.3
    background-color: #444
    border: 1px solid #888
    &.is-required
    &.no-match
    &.failed
      border: 1px solid #8e6868
      background-color: #583838
  span.required-message
  span.no-match-message
  span.error-message
    display: block
    margin-top: 3px
    color: #5d1111 /* 5d1111, 711b1b */
    font-size: 0.8rem
    text-align: right
  select
    display: block
    padding: 4px 1.5%
    width: 100%
    height: 35px
    font-size: 0.85rem
    color: #84f1ff
    line-height: 1.3
    background-color: #444
    border: 1px solid #888
  textarea
    padding: 10px
    width: calc(100% - 22px);
    height: 100px
    font-size: 0.85rem
    color: #84f1ff
    line-height: 1.3
    background-color: #444
    border: 1px solid #888
  input[type="file"]
    width: 250px
  // Styling for form element grouping by columnization
  section.columns-2
    article
      input[type="text"]
      input[type="password"]
      textarea
        padding: 4px 3%
        width: 94%
  section.columns-3
    article
      input[type="text"]
      input[type="password"]
      textarea
        padding: 4px 4.5%
        width: 91%
  section.columns-4
    article
      input[type="text"]
      input[type="password"]
      textarea
        padding: 4px 6%
        width: 88%
  form
    section[class^="columns-"]
      p
      	margin-bottom: 0
    .on-icon
    	.icon-checkmark:before
    		font-size: 0.85rem
  input[type="submit"]
  	margin-right: 5px
  	padding: 8px 25px
  	color: buttonColor
  	font-size: 0.9rem
  	background-color: buttonBg
  	border: 1px solid #565656
  	border-radius: 4px
  	transition: all 0.12s ease-in-out
  	-webkit-transition: all 0.12s ease-in-out
  	cursor: pointer
  	&:hover
  		color: buttonHoverColor
  		background-color: #222
  	&[class^="icon-"]
  		vertical-align: top
  .right-justify
    input[type="submit"]
      margin-right: 0

forms-segments()
  .form-segment.break
    lost-flex-container: row
    //
    // FORM COLUMNS
    //
    for item in (10..1)
      &.lg-columns-{item}
        > .cell
          lost-column: 1/item item 15px flex
        +below(lg)
          > .cell
            lost-column: 1/item item 15px flex
      &.md-columns-{item}
        +below(md)
          > .cell
            lost-column: 1/item item 15px flex
      &.tablet-columns-{item}
        +below(tablet)
          > .cell
            lost-column: 1/item item 15px flex
      &.sm-columns-{item}
        +below(sm)
          > .cell
            lost-column: 1/item item 15px flex
      &.xs-columns-{item}
        +below(xs)
          > .cell
            lost-column: 1/item item 15px flex
